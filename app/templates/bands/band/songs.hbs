{{#if @model.length}}
  <ul>
    {{#each @model as |song|}}
      <li class="mb-2">
        {{song.title}}
        <span class="float-right">
          <StarRating
            @rating={{song.rating}}
            @onUpdate={{mut song.rating _}}
          />
        </span>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p class="text-center">
    The band has no songs yet.
  </p>
{{/if}}
<div class="flex justify-center mt-2">
  <button
    type="button"
    class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg
    hover:text-white hover:bg-purple-500 focus:outline-none"
  >
    Add song
  </button>
</div>